<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="product_template_channelengine_form_view">
        <field name="name">product.template.channelengine.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']" position="inside">
                <field name="channel_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="product_template_channelengine_tree_view">
        <field name="name">product.template.channelengine.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="channel_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
</odoo>
